
<div class="panel panel-default">
  <div class="panel-body">
  <%= form_with(model: auction, local: true) do |form| %>
  <div class=" field form-group"> 

    <div class="field form-group">
      <% form.label :name %><br />
      <%= form.text_field :name, autofocus: true,required: true, autocomplete: "name", class: "form-control", placeholder: "Name" %>
    </div>

    <div class="field form-group">
      <%= form.label :starttime , class:"form-label" %>
      <%= form.datetime_select :starttime, required:true %>  
    </div>

    <div class="field form-group">
      <%= form.label :endtime , class:"form-label" %>
      <%= form.datetime_select :endtime, required:true %>  
    </div>

    <div class="field form-group">
      <% form.label :minbids %><br />
      <%= form.number_field :minbids, autofocus: true,required: true, min: 0, autocomplete: "minbids", class: "form-control", placeholder: "Minimum Bid" %>
    </div>

    <div class="actions">
      <%= form.submit "Create Auction ", class: "btn btn-primary"  %>
    </div>
  </div>
  <% end %>
</div>
