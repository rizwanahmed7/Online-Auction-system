<h2>All Users</h2>
<% @users.each do |user| %>
  <div class="card  text-center col-lg-3 col-sm-6 mb-3 mb-md-0" >
      <div class="card-body">
        <h5 class="card-title">User Name</h5>
        <h3 class="card-text"><%= user.name %></h3>
    </div>
      <div class="card-body">
        <h5 class="card-title">User Role</h5>
        <h3 class="card-text"><%= user.role %></h3>
      </div>
    <div class="actions">
    <button type="button" class="btn btn-danger"> <%= link_to 'Remove User', user, method: :delete, data: {confirm: 'Are You Sure?'} %></button>
    <button type="button" class="btn btn-danger"> <%= link_to "Edit User Role ", edit_user_path(user.id) %></button>
     </div>
  </div>
<% end %>