<div class="card">

  <%= form_with model: @auctionproduct,method: :patch, local: true do |f| %>
    <div class="card-body">
      <% f.label :name %><br />
      <%= f.text_field :name, autofocus: true,required: true, autocomplete: "name", class: "form-control", placeholder: "Name" %>
    </div>

    <div class="card-body">
      <% f.label :minbids %><br />
      <%= f.number_field :minproductbid, autofocus: true,required: true, min: 0, autocomplete: "minproductbid", class: "form-control", placeholder: "Minimum Product Bid" %>
    </div>

    <div class="card-body">
      <%= f.submit "confirm edit " %>
    </div>

  <% end %>
</div>

