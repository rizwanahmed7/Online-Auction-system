<div class="card">

  <%= form_with(model: @autobid,url:  auctionproduct_autobids_path , local: true) do |form| %>
    <div class="card-body">
      <% form.label :amount %><br />
      <%= form.number_field :amount, autofocus: true,required: true, min: 0, autocomplete: "amount", class: "form-control", placeholder: "Boundry Amount" %>
    </div>

    <div class="card-body">
      <%= form.submit " confirm  amount " %>
    </div>

  <% end %>
</div>